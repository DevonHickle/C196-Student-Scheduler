<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".Activities.AddEditAssessmentActivity">

    <EditText
        android:id="@+id/edit_assessment_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:hint="@string/assessmentName"
        android:autofillHints=""
        android:inputType="none" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/type"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        />

    <RadioGroup
        android:id="@+id/edit_assessment_radio_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radio_assessment_type_oa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/objectiveAssessment" />

        <RadioButton
            android:id="@+id/radio_assessment_type_pa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/performanceAssessment" />
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/goalDate"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        />

    <EditText
        android:id="@+id/edit_assessment_goal_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:inputType="date"
        android:hint="@string/mmddyyyy"
        android:autofillHints="" />

    <CheckBox
        android:id="@+id/edit_assessment_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/alarm" />
</androidx.appcompat.widget.LinearLayoutCompat>